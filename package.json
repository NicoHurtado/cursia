{
  "name": "cursia",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "dev:https": "next dev --experimental-https --experimental-https-key ./cert.key --experimental-https-cert ./cert.crt",
    "dev:https:turbo": "next dev --turbo --experimental-https --experimental-https-key ./cert.key --experimental-https-cert ./cert.crt",
    "test": "vitest run --reporter=verbose",
    "test:watch": "vitest",
    "build": "next build",
    "start": "next start",
    "prepare": "husky",
    "lint": "next lint",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "worker": "node scripts/start-worker.js",
    "dev:worker": "nodemon scripts/start-worker.js",
    "start:production": "USE_AI_QUEUE=true USE_AI_CACHE=true USE_REDIS_RATE_LIMIT=true next start",
    "start:worker": "USE_AI_WORKER=true node scripts/start-worker.js"
  },
  "dependencies": {
